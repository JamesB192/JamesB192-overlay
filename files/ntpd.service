[Unit]
Description=Network Time Service
After=network.target nss-lookup.target
Conflicts=systemd-timesyncd.service

[Service]
Type=forking
PrivateTmp=true
EnvironmentFile=-/etc/conf.d/ntpd
ExecStart=/usr/sbin/ntpd -g -n ${NTP_OPTS}
Restart=always
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
